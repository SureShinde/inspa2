                    </resource>
                    <resource id="Lof_SmtpSms::report" title="Report" sortOrder="70" /> 
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Lof_SmsNotification::config" title="Lof SmsNotification" sortOrder="1000"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
